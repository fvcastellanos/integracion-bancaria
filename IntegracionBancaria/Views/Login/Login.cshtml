@model IntegracionBancaria.Model.Views.Login

@{
    ViewData["Title"] = "Iniciar Sesion";

}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <div class="row">
            <div class="col-md-12" style="background: #D9EDF7; padding: 1em;">

                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", @placeholder = "Usuario", @id = "usuario" })
                        @Html.ValidationMessageFor(model => model.Usuario, String.Empty,  new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Clave, new { @class = "form-control", @placeholder = "Contraseña", @id = "clave" })
                        @Html.ValidationMessageFor(model => model.Clave, String.Empty,  new { @class = "text-danger" })
                    </div>

                    <input type="submit" class="btn btn-primary" value="Ingresar" />
                    <span class="text-danger">@Html.ValidationSummary()</span>
                    <p>
                        ¿No tiene usuario?&nbsp;<a asp-controller="Registro" asp-action="Index">Registrese</a>
                    </p>
                }

            </div>

        </div>
    </div>
</div>